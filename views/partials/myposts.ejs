<div class="container1">
    <% user.posts.forEach(element=> { %>
        <div class="box">
            <% if (element.image.match(/\.(mp4|webm|ogg)$/i)) { %>
                <!-- Video Tag -->
                <video class="rounded-3" width="100%" autoplay loop>
                    <source src="/images/uploads/<%= element.image %>" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
                <% } else { %>
                    <!-- Image Tag -->
                    <img src="/images/uploads/<%= element.image %>" alt="image" />
                    <% } %>

                    <div class="delete d-flex justify-content-end">
                        <a href="/delete?id=<%= element._id %>" onclick="return confirmDelete();" style="text-decoration: none; color: white">
                            <button class="btn btn-danger rounded-pill">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </a>
                    </div>
                    
                        <div class="caption">
                            <p class="m-0 p-0">
                                <%= element.postcaption %>
                            </p>
                        </div>
        </div>
        <% }) %>
</div>